# Copy to .env for local development. Override values as needed.
SPRING_DATASOURCE_HOST=localhost
SPRING_DATASOURCE_PORT=3307
# Optionally override the full JDBC URL instead of host/port.
# SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3307/stock_community?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=bt_user
SPRING_DATASOURCE_PASSWORD=bt_pass
SPRING_DATASOURCE_POOL_SIZE=10

