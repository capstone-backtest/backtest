FROM gradle:8.12-jdk17 AS build

# Use Gradle official image to build (avoids wrapper distribution download inside container)
WORKDIR /home/gradle/project

# Ensure Gradle cache dir exists and is writable by gradle user
ENV GRADLE_USER_HOME=/home/gradle/.gradle
RUN mkdir -p ${GRADLE_USER_HOME} && chown -R gradle:gradle ${GRADLE_USER_HOME}

# Copy project files as gradle user
COPY --chown=gradle:gradle build.gradle settings.gradle ./
COPY --chown=gradle:gradle gradle ./gradle
COPY --chown=gradle:gradle src ./src
COPY --chown=gradle:gradle gradlew ./gradlew

# Ensure project-local .gradle is writable
# Ensure project directory and common build output directories exist and are writable
RUN mkdir -p /home/gradle/project/.gradle /home/gradle/project/build /home/gradle/project/build/reports /home/gradle/project/build/classes \
	&& chown -R gradle:gradle /home/gradle/project

# Build the application
RUN chmod +x gradlew && cp gradlew /usr/local/bin/gradlew && chmod +x /usr/local/bin/gradlew
USER gradle
RUN gradle bootJar -x test --no-daemon

# Runtime image: use JRE for smaller production runtime
FROM eclipse-temurin:17-jre-jammy
WORKDIR /app
COPY --from=build /home/gradle/project/build/libs/*.jar ./app.jar
EXPOSE 8002
CMD ["java", "-jar", "./app.jar"]
